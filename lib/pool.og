import
  time
  "github.com/k0kubun/go-ansi": curs

type WorkerCallback (fn(string): error)

struct Worker
  In chan string
  Out chan error
  Processing string
  Job WorkerCallback

  *Run ->
    for todo in @In
      @Processing = todo

      res := @Job(todo)

      @Processing = "."

      @Out <- res

    @Processing = "."

NewWorker(i chan string, out chan error, job WorkerCallback): *Worker ->
  &Worker
    Processing: "."
    In: i
    Out: out
    Job: job

struct Pool
  Size int
  Workers []*Worker
  Total int
  Finished int
  In chan string
  Out chan error
  Printer *Printer

  Queue(job string) ->
    @In <- job

  Run: error ->
    for _, worker in @Workers
      go worker.Run()

    close(@In)

    curs.CursorHide()
    defer curs.CursorShow()

    ticker := time.NewTicker(100 * time.Millisecond)
    go ->
      for true
        <-ticker.C
        @Print()

    for @Finished < @Total
      if err := <-@Out; err != nil
        ticker.Stop()
        return err

      @Finished++

    ticker.Stop()
    @Print()

    nil

  Print ->
    workerIds := []int{}
    files := []string{}

    for i, worker in @Workers
      if worker.Processing != "."
        files = append(files, worker.Processing)
        workerIds = append(workerIds, i + 1)

    @Printer.CompileList(files, workerIds, len(@Workers), @Finished, @Total)

